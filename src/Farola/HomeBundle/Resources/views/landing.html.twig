    <div style="text-align:left;font-weight:400;" class="modal fade" id="creditModal" data-keyboard="false" tabindex="-1" role="dialog" aria-labelledby="msg-modal-Label" aria-hidden="true" >
      <div class="modal-dialog modal-md">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
            <h4 class="modal-title" id="msg-modal-Label">Credits</h4>
          </div>
          <div class="modal-body">
